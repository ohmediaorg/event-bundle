{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}{{ title }}{% endblock %}

{% block breadcrumbs %}
  {{ bootstrap_breadcrumbs(
    bootstrap_breadcrumb(bootstrap_icon('calendar-event') ~ ' ' ~ title, 'event_index'),
  ) }}
{% endblock %}

{% set can_create_event = is_granted(attributes.create, new_event) %}
{% set create_event_href = path('event_create') %}

{% set can_view_event_tag = is_granted(attributes.view_tags, new_event_tag) %}
{% set view_event_tags_href = path('event_tag_index') %}

{% block actions %}
  {% if can_create_event %}
    <a href="{{ create_event_href }}" class="btn btn-primary">
      {{ bootstrap_icon('plus-lg') }} Add Event
    </a>
  {% endif %}
  {% if can_view_event_tag %}
    <a href="{{ view_event_tags_href }}" class="btn btn-secondary">
      {{ bootstrap_icon('tags') }} Tags
    </a>
  {% endif %}
  {% if is_past %}
    <a href="{{ path('event_index', {status: 'upcoming'}) }}" class="btn btn-secondary">
      {{ bootstrap_icon('hourglass-top') }}
      Upcoming Events
      {{ bootstrap_badge_dark(other_count) }}
    </a>
  {% else %}
    <a href="{{ path('event_index', {status: 'past'}) }}" class="btn btn-secondary">
      {{ bootstrap_icon('hourglass-bottom') }}
      Past Events
      {{ bootstrap_badge_dark(other_count) }}
    </a>
  {% endif %}
{% endblock %}

{% block main %}
  {% set event_count = pagination.count %}

  <div class="card">
    <div class="card-body">
      <div class="card-title card-title-with-count">
        <h1 class="card-title-heading">{{ title }}</h1>
        <div class="card-title-count">
          {{ bootstrap_badge_primary(event_count) }}
        </div>
      </div>

      {% if event_count %}
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Times</th>
              {% if event_tags_enabled %}
                <th>Tags</th>
              {% endif %}
              <th>Last Updated</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for event in pagination.results %}
              {{ _self.table_row(event, attributes, is_past, event_tags_enabled) }}
            {% endfor %}
          </tbody>
        </table>

        {{ bootstrap_pagination(pagination) }}

        <small>{{ bootstrap_pagination_info(pagination) }}</small>
      {% else %}
        <p>
          No events found.
          {% if not is_past and can_create_event %}
          <a href="{{ create_event_href }}">Click here to add an event.</a>
          {% endif %}
        </p>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% macro table_row(event, attributes, is_past, event_tags_enabled) %}
  {% set row_actions = [] %}

  {% if is_granted(attributes.edit, event) %}
    {% set row_actions = row_actions|merge([{
      route: 'event_edit',
      route_params: {id: event.id},
      color: 'secondary',
      icon: 'pen',
      text: 'Edit Event',
    }]) %}
  {% endif %}

  {% if is_granted(attributes.duplicate, event) %}
    {% set row_actions = row_actions|merge([{
      route: 'event_duplicate',
      route_params: {id: event.id},
      color: 'secondary',
      icon: 'copy',
      text: 'Duplicate Event',
    }]) %}
  {% endif %}

  {% if is_granted(attributes.delete, event) %}
    {% set row_actions = row_actions|merge([{
      route: 'event_delete',
      route_params: {id: event.id},
      color: 'danger',
      icon: 'trash',
      text: 'Delete Event',
      confirm: 'Are you sure you want to delete this event? Clicking OK will take you to a verification step to delete this entry.',
    }]) %}
  {% endif %}

  <tr>
    <td>
      {{ event }}
      {% if not is_past %}
        <br>
        {% if event.isPublished %}
          {{ bootstrap_badge_success('Published') }}
        {% elseif event.publishedAt %}
          {{ bootstrap_badge_warning('Pending') }}
        {% else %}
          {{ bootstrap_badge_secondary('Draft') }}
        {% endif %}
      {% endif %}
    </td>
    <td>
      {% for time in event.times %}
      <small class="d-block">{{ time }}</small>
      {% endfor %}
    </td>
    {% if event_tags_enabled %}
      <td>
        {% for tag in event.getTags %}
          {{ bootstrap_badge_secondary(tag.name) }} <br>
        {% endfor %}
      </td>
    {% endif %}
    <td>{{ event.updatedAt|datetime }}</td>
    <td>
      {% include '@OHMediaBackend/widget/row_actions.html.twig' with {
        row_actions: row_actions,
      } only %}
    </td>
  </tr>
{% endmacro %}
